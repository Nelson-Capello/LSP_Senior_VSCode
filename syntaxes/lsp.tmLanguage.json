{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LSP Senior",
	"scopeName": "source.lsp",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#constants"
		}

	],
	"repository": {
		"comments": {
			"patterns": [
				{
				"name": "comment.line.lsp",
				"begin": "@",
				"end": "@"
				},
        {
				"name":"comment.block.lsp",
				"begin": "\/[*]",
				"end": "[*](\/)"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lsp",
					"match": "\\b(?i)(se|senao|inicio|fim|fim;|enquanto|para)\\b"
				},
				{
					"name": "keyword.lsp",
					"match": "\\b(?i)(Abrir|Cancel|Continue|Cursor|Definir|DesfazerTransacao|Fechar|FinalizarTransacao|Formatar|FormatarN|Funcao|Gravar|Gravarnl|Grid|IniciarTransacao|Inserir|Ler|Lernl|Mensagem|Numero|Para|Pare|Regra|Tabela|ValStr|VaPara)\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.lsp",
					"begin": "\"",
					"end": "\""
				},
				{
					"name": "string.quoted.single.lsp",
					"begin": "'",
					"end": "'"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.language.lsp",
					"match": "\\b(?i)(inteiro|alfa|numero|data|booleano|cursor)\\b"
				},
				{
					"name": "variable.name.lsp",
					"match": "\\b(?i)(codusu|nomusu|datsis)\\b"
				}
			]
		},
		"functions": {
			"patterns": [{
				"name": "support.function.language.lsp",
				"match": "\\b(?i)(ExecSQL|execsqlex|ObterValorAlfaPadraoCNAB|ObterValorNumericoPadraoCNAB|DeixaNumeros|UltimoDia|CPFValido|CNPJValido|Arredonda|ObterValorDecimalPadraoCNAB|ObterValorDataPadraoCNAB|AlfaParaInt|ArqExiste|AtualizaBarraProgresso|CaracterParaAlfa|CodData|ConverteCodificacaoString|ConverteMascara|ConverteParaMaiusculo|ConverteParaMinusculo|ConverteTexto|CopiarAlfa|CriarArquivoTemporario|DataHoje|DataHora|DecodData|DeletarAlfa|Desencriptar|Dividir|Encriptar|ExcluirArquivoTemporario|ExecProg|FinalizaBarraProgresso|FormatarData|GeraHash|GerarNonce|GerarPwdDigest|GeraSenha|GeraToken|HoraParaMinuto|IniciaBarraProgresso|IntParaAlfa|LerPosicaoAlfa|LinhasArquivo|ListaItem|ListaQuantidade|Mensagem|ObtemIdiomaAtivo|ObterVersaoSistema|OcultaBarraProgressoRelatorio|PosicaoAlfa|RemoveExpressoesProibidas|RestoDivisao|RetornaValorCFG|TamanhoAlfa|TrocaString|Truncar|VerificaAbaAtiva|VrfAbrA|VrfAbrN|DesmontaData)\\b"}]
		},
		"constants": {
			"patterns": [{
				"name": "entity.other.lsp",
				"match": "\\b(?i)(def|def|nelsonteste)\\b"
			}]
		}

	}
}